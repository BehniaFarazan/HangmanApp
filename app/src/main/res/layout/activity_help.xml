<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.behnia.s165203superhangman.HelpActivity">

    <Button
        android:id="@+id/thanksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Thanks for the help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="264dp"
        android:layout_height="195dp"
        android:text="The player tries to guess a random word using a strategy based solely on letter frequency.The guessing player has lost this game as the diagram had been completed before all the letters were guessed otherwise the player wins.
The player can save the sored highscore by giving a name to it. The score is calculated out from the hidden words length and wil be decresed every  time the player guesses wrong"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/thanksButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.505"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
